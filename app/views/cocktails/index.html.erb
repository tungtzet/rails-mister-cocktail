<div class="container">
  <h1 class="my-5">All Cocktails</h1>
  <div class="row mb-5">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-4">
        <div class="card-category mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key %>)">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      </div>
    <% end %>
    <div class="col-sm-4">
        <div class="card-category mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
          <%= link_to "+ Add your own recipe", new_cocktail_path, id: "add-new" %>
        </div>
      </div>
  </div>


</div>